---

const { title, url } = Astro.props;

interface Props {
  title?: string;
  url?: string;
}

const baseClasses =
    "group inline-flex items-center justify-center gap-x-3 rounded-full px-4 py-3 text-center text-sm font-medium text-white ring-offset-2 focus-visible:ring transition duration-300 outline-none";
const borderClasses = "border border-transparent";
const bgColorClasses = "bg-gray-600 dark:bg-gray-500 dark:focus:outline-none";
const hoverClasses = "hover:bg-gray-700 dark:hover:bg-gray-600 hover:shadow-lg hover:shadow-gray-500/50";
const fontSizeClasses = "2xl:text-base";
const ringClasses = "focus:ring-2 focus:ring-gray-400 dark:focus:ring-gray-400";

---

<a
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${hoverClasses} ${fontSizeClasses} ${ringClasses}`}
  href={url}
  target="_blank"
  rel="noopener noreferrer"
>
  {title}
</a>
