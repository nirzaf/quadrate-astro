---
// Import the necessary dependencies.

import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define the variables that will be used in this component
const title: string = "Contactez Quadrate Tech Solutions";
const subTitle: string =
  "Votre partenaire pour des solutions logicielles axées sur la croissance. Nous sommes là pour répondre à vos questions et discuter de votre projet.";
const formTitle: string = "Remplissez le formulaire ci-dessous";
const formSubTitle: string =
  "Nous vous répondrons dans un délai de 1 à 2 jours ouvrables.";
---

<!-- Contact Us -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Form for user input with various input fields.-->
        <!-- Each field utilizes a different input component for the specific type of input (text, email, phone, and textarea)-->
        <form>
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="Prénom"
                name="hs-firstname-contacts"
              />
              <TextInput
                id="hs-lastname-contacts"
                label="Nom"
                name="hs-firstname-contacts"
              />
            </div>
            <EmailContactInput id="hs-email-contacts" />
            <PhoneInput id="hs-phone-number" />
            <TextAreaInput
              id="hs-about-contacts"
              label="Détails du projet"
              name="hs-about-contacts"
            />
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
        </form>
      </div>

      <!--ContactIconBlocks are used to display different methods of contacting, including visiting office, email, browsing services, and booking.-->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Nos Services"
          content="Découvrez notre gamme complète de services, y compris le développement web, le SEO, et les solutions ERP."
          isLinkVisible={true}
          linkTitle="Explorer nos services"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="cog" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Réserver une consultation"
          content="Planifiez une consultation gratuite pour discuter de vos besoins en matière de logiciels."
          isLinkVisible={true}
          linkTitle="Réserver maintenant"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="calendar" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Visitez notre bureau"
          content="Quadrate Tech Solutions Pvt Ltd"
          isAddressVisible={true}
          addressContent="19/2/9, Market Complex, Matale Road, Akurana, Kandy: 20850"
          ><Icon name="mapPin" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contactez-nous par e-mail"
          content="Pour toute question ou demande, n'hésitez pas à nous envoyer un e-mail à"
          isLinkVisible={true}
          linkTitle="info@quadrate.lk"
          linkURL="mailto:info@quadrate.lk"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>
