---
// Import the necessary dependencies.
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define the variables that will be used in this component
const title: string = "Contact Quadrate Tech Solutions";
const subTitle: string = "We'll discuss your needs and develop a customized software solution that helps you achieve your goals.";
const formTitle: string = "Fill in the form below";
const formSubTitle: string = "We'll get back to you in 1-2 business days.";

const primaryBtn = {
  title: "Submit",
  primaryBtnURL: "#"
};
---

<!-- Contact Us -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Form for user input with various input fields.-->
        <!-- Each field utilizes a different input component for the specific type of input (text, email, phone, and textarea)-->
        <iframe 
          width='100%' 
          height='585px' 
          src='https://quadratetechsolutions.zohobookings.com/portal-embed#/quadratetechsolutions' 
          allowfullscreen=''>
        </iframe>
      </div>
      <!--ContactIconBlocks are used to display different methods of contacting, including visiting office, email, browsing knowledge-base, and FAQ.-->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Our Services"
          content="Explore our comprehensive range of services including SEO, Design and Development, Social Media Marketing, PPC, Conversion Optimization, and more."
          isLinkVisible={true}
          linkTitle="View Our Services"
          linkURL="/services"
          isArrowVisible={true}
          ><Icon name="question" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="ERP Solutions"
          content="Discover our cutting-edge QTS ULTIMATE ERP packages designed to streamline your business operations."
          isLinkVisible={true}
          linkTitle="Explore ERP Solutions"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="chatBubble" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Visit our office"
          content="Quadrate Tech Solutions Pvt Ltd"
          isAddressVisible={true}
          addressContent="19/2/9, Market Complex, Matale Road, Akurana, Kandy: 20850"
          ><Icon name="mapPin" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contact us by email"
          content="For inquiries, reach out to us at"
          isLinkVisible={true}
          linkTitle="info@quadrate.lk"
          linkURL="mailto:info@quadrate.lk"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div></section>
